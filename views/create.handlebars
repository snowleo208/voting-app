				<div class="input-group">
				<div class="input-group-addon"><i class="fa fa-align-center" aria-hidden="true"></i></i></div>
				<input type="text" class="form-control choice" name="name" id="name" placeholder="Poll Name" required>
				</div>
			  </div>
			  <div class="form-group">
				<div class="input-group">
				<div class="input-group-addon"><i class="fa fa-comments-o" aria-hidden="true"></i></div>
				<input type="text" class="form-control choice" name="1" id="1" placeholder="Option 1" required>
				</div>
			  </div>
			  <div id="last-option">
				  <div class='form-group'>
					<div class="input-group">
					<div class="input-group-addon"><i class="fa fa-comments-o" aria-hidden="true"></i></div>
					<input type="text" class="form-control choice second-choice" name="2" id="2" placeholder="Option 2" required>
					</div>
				</div>
			  </div>
				
			  <span id="add" class="btn app-btn"><i class="fa fa-plus" aria-hidden="true"></i> Add Options</span>
